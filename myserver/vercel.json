{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "memory": 1024,
        "maxDuration": 20
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/index.ts",
      "headers": { "Access-Control-Allow-Origin": "*" },
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    }
  ]
}